<% if notice %>
  <div class="notification is-success">
    <p class="has-text-centered"><%= notice %></p>
  </div>
<% end %>

<%= render @user %>

<div>
  <div class="buttons is-centered mt-4">
    <%= link_to "Edit this user", edit_user_path(@user), class: "button is-primary is-medium mr-4" %>
    <%= link_to "Back to users", users_path, class: "button is-info is-medium" %>
  </div>

  <div class="has-text-centered">
    <%= button_to "Delete User", @user, method: :delete, class: "button is-danger is-medium mt-4", data: { confirm: "Are you sure you want to delete this user?" } %>
  </div>
</div>
